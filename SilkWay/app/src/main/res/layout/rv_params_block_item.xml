<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:paddingHorizontal="16dp"
    android:paddingTop="10dp">
    
    <View
        android:id="@+id/v_background"
        android:layout_width="match_parent"
        android:layout_height="165dp"
        android:backgroundTint="@color/silkway_dark_grey"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@drawable/rounded_corners_8"/>

    <View
        android:id="@+id/v_foreground"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="@id/v_background"
        app:layout_constraintBottom_toBottomOf="@id/v_background"
        app:layout_constraintRight_toRightOf="@id/v_background"
        app:layout_constraintLeft_toLeftOf="@id/v_background"
        android:layout_margin="2dp"
        android:backgroundTint="@color/white"
        android:background="@drawable/rounded_corners_8"/>

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/v_background"
        app:layout_constraintLeft_toLeftOf="@id/v_background"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:text="Parameters"
        android:textStyle="bold"
        android:textSize="20sp"/>
    <TextView
        android:id="@+id/tv_params"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="4dp"
        android:layout_marginRight="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintTop_toBottomOf="@id/tv_title"
        app:layout_constraintRight_toRightOf="@id/v_background"
        app:layout_constraintLeft_toLeftOf="@id/v_background"
        app:layout_constraintBottom_toBottomOf="@id/v_background"
        tools:text="Name: Sprey"
        android:textStyle="bold"
        android:textColor="@color/silkway_dark_grey"
        android:textSize="16sp"
        />


</androidx.constraintlayout.widget.ConstraintLayout>